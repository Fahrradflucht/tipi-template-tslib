{
  "name": "${name}",
  "version": "0.0.0",
  "description": "${description}",
  "license": "MIT",
  "author": "${author} <${email}>",
  "repository": {
    "url": "https://github.com/${user}/${name}.git",
    "type": "git"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.js"
    }
  },
  "scripts": {
    "commitmsg": "conventional-changelog-lint -e",
    "prepush": "npm run ci",
    "preci": "npm prune && npm install",
    "ci": "npm run lint && tsfmt --verify && npm test",
    "precompile": "rimraf lib",
    "compile": "tsc --project .",
    "cz": "git-cz",
    "format": "tsfmt --replace",
    "lint": "tslint -s node_modules/custom-tslint-formatters/formatters -t grouped 'src/**/*.{ts,tsx}' 'types/**/*.d.ts'",
    "prerelease": "git checkout master && npm run ci",
    "release": "standard-version",
    "pretest": "npm run compile",
    "test": "echo 'no tests found'",
    "watch:compile": "npm run compile -- --watch"
  },
  "devDependencies": {
    "commitizen": "2.8.6",
    "conventional-changelog-lint": "1.1.0",
    "custom-tslint-formatters": "2.0.0",
    "cz-customizable": "4.0.0",
    "husky": "0.11.9",
    "rimraf": "2.5.4",
    "standard-version": "4.0.0",
    "ts-config": "0.3.0",
    "tslint": "4.0.2",
    "typescript": "2.1.1",
    "typescript-formatter": "4.0.1"
  }
}
