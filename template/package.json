{
  "name": "${name}",
  "version": "0.0.0",
  "description": "${description}",
  "license": "MIT",
  "author": "${author} <${email}>",
  "repository": {
    "url": "https://github.com/${user}/${name}.git",
    "type": "git"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.js"
    }
  },
  "scripts": {
    "clean": "rimraf lib",
    "commit": "git-cz",
    "commitmsg": "conventional-changelog-lint -e",
    "compile": "npm test && npm run clean && tsc --project .",
    "release": "npm run compile && standard-version",
    "test": "tslint 'src/**/*.{ts,tsx}'"
  },
  "devDependencies": {
    "commitizen": "2.8.6",
    "conventional-changelog-lint": "1.1.0",
    "cz-customizable": "4.0.0",
    "husky": "0.11.9",
    "rimraf": "2.5.4",
    "standard-version": "3.0.0",
    "ts-config": "0.2.0",
    "tslint": "4.0.2",
    "typescript": "2.1.1"
  }
}
